extends ../shared/template
block content
  .container
    #banner.page-header
      .row
        .col-sx-12
          h2 Your New trip !
          small Test para todos
  .panel.panel-default
    .panel-body
      .row
        form(class='form-group', role='form',method='post', action='/trips',enctype='multipart/form-data')
          .col-xs-5
            .from-group
              label(for='tripName') Trip Name
              input#name.form-control(type='text', placeholder='Name',name='name')
            .form-group
              label(for='cash') Cash:
              input#cash.form-control(type='number',placeholder='$$$',name='cash')
            .form-group
              label(for='beginning') Beginning:
              input#beginning.form-control(type='text',placeholder='Nashville, go go!', name='beginning')
            .form-group
              label(for='End') End:
              input#end.form-control(type='text',placeholder='San Francisco', name='end')
          .col-xs-5
            .form-group
              label(for='mpg') Mpg:
              input#mpg.form-control(type='number',placeholder='Km',name='mpg')
            .form-group
              label(for='from') From:
              input#from.form-control(type='date',name='from')
            .form-group
              label(for='End') To:
              input#to.form-control(type='date',name='to')
            .form-group
              label(for='gasCost') Gas cost by gal:
              input#gasCost.from-control(type='number',placeholder='3.30',name='gasCost')
            button.btn.btn-primary.btn-lg(type='submit') Submit

block scripts
  script(src='/js/user/init.js')
